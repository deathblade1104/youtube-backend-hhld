# ==========================================
# Server Configuration
# ==========================================
PORT=8081
NODE_ENV=development

# ==========================================
# Common Host
# Replace HOST_IP with your actual host IP
# For all services (PostgreSQL, Redis, Kafka, etc.)
# ==========================================
HOST_IP=xyz.abc.jkl.mno

# ==========================================
# Database Configuration (PostgreSQL)
# ==========================================
DB_HOST=${HOST_IP}
DB_PORT=5432
PG_USER=admin
PG_PASSWORD=password
DB_NAME=postgres
DB_SCHEMA=youtube
DB_SYNC=true  # Enable automatic database schema synchronization (similar to TypeORM synchronize)

# ==========================================
# Redis Configuration
# ==========================================
REDIS_HOST=${HOST_IP}
REDIS_PORT=6379
REDIS_PASSWORD=password
REDIS_TTL=3600

# ==========================================
# Kafka (Redpanda) Configuration
# ==========================================
KAFKA_BROKERS=${HOST_IP}:9092
KAFKA_CLIENT_ID=youtube-ai-python
KAFKA_GROUP_ID=youtube-consumer-group-python

# ==========================================
# Object Storage (MinIO - AWS S3 Compatible)
# ==========================================
AWS_REGION=ap-south-1
AWS_ACCESS_KEY_ID=admin
AWS_SECRET_ACCESS_KEY=password
AWS_YOUTUBE_BUCKET=youtube-ai

# For MinIO (set to 'true' for local S3)
USE_LOCALSTACK=true
AWS_S3_ENDPOINT=http://${HOST_IP}:9100

# ==========================================
# OpenAI Configuration
# ==========================================
OPENAI_API_KEY=your_openai_api_key_here

# Whisper Model Configuration
# Options: tiny, base, small, medium, large
# 'base' is recommended for good balance of speed and accuracy
WHISPER_MODEL=base

# ==========================================
# Celery Configuration
# ==========================================
CELERY_BROKER_URL=redis://${REDIS_HOST}:${REDIS_PORT}/0
CELERY_RESULT_BACKEND=redis://${REDIS_HOST}:${REDIS_PORT}/0

# ==========================================
# Miscellaneous
# ==========================================
LOG_LEVEL=debug

